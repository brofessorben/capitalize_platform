+// Simple time endpoint for health/demo
+export default function handler(req, res) {
+  // Prevent caching so 'now' is always fresh
+  res.setHeader('Cache-Control', 'no-store');
+  res.status(200).json({
+    ok: true,
+    now: new Date().toISOString()
+  });
+}
